<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textFundsCategoryTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textFundsCategorySubTitle">
        <item name="android:textSize">15dp</item>

    </style>

    <style name="fund_item_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="fund_item_subtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="fund_item_detail_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="fund_detail_tab_header">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="fund_detail_tab_header_item">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="fund_detail_tab_info">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>